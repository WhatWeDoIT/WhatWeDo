    /*Boton de reservar*/
    .btn-reservar {
        position: relative;
        font-size: 0.75em;
        text-transform: uppercase;
        text-decoration: none;
        padding: 0.5em 1em;
        display: inline-block;
        border-radius: 5px;
        transition: all .2s;
        border: none;
        font-family: inherit;
        font-weight: 500;
        color: white;
        background-color: #001122;
        height: 60px;
        border: 1px solid white;
    }

        .btn-reservar:hover {
            transform: translateY(-3px);
            color: white;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .btn-reservar:active {
            transform: translateY(-1px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        }

        .btn-reservar::after {
            content: "";
            display: inline-block;
            height: 100%;
            width: 100%;
            border-radius: 5px;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
            transition: all .4s;
        }

        .btn-reservar::after {
            background-color: white;
        }

        .btn-reservar:hover::after {
            transform: scaleX(1.4) scaleY(1.6);
            opacity: 0;
        }

    /* Estilo para el contenedor con scroll horizontal */
