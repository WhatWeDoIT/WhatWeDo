<hr style="background-color:white" />

<!-- Enlaces de paginación -->
<div class="d-flex justify-content-center mt-4 mb-3">
    @if (ViewBag.PaginaActual > 1)
    {
        <a href="@Url.Action("MisEventosEmpresa", new { page = ViewBag.PaginaActual - 1 })" class="btn btn-primary pagination-button">Anterior</a>
    }

    @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
    {
        <a href="@Url.Action("MisEventosEmpresa", new { page = i })" class="btn btn-secondary @(ViewBag.PaginaActual == i ? "active" : "") pagination-button">@i</a>
    }

    @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
    {
        <a href="@Url.Action("MisEventosEmpresa", new { page = ViewBag.PaginaActual + 1 })" class="btn btn-primary pagination-button">Siguiente</a>
    }
</div>
