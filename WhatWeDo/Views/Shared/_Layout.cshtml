@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WhatWeDo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WhatWeDo.styles.css" asp-append-version="true" />
</head>
<body style="margin-bottom: 0px">
    <div class="container-fluid">
        <div class="row">           
            @*nav bar*@
            <div class="col" style="padding: 0;">
                <header>
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-dark bg-dark border-bottom box-shadow mb-3">
                        <div class="container-fluid" style="padding: 0px;">       
                            
                             <div class="input-group navbar-toggler" style="border: none;">
                                <div class="d-flex align-self-center">
                                    <a class="navbar-brand" style="margin-left: 10%;" asp-area="" asp-controller="Home" asp-action="Eventos">WhatWeDo</a>
                                </div>
                                <div class="d-flex justify-content-end" style="width:75%;">
                                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                            aria-expanded="false" aria-label="Toggle navigation" style="margin-left: 5px;">
                                        <span class="navbar-toggler-icon"></span>
                                    </button>
                                </div>                                
                            </div>
                          
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">                               
                                <ul class="navbar-nav flex-grow-1" style="margin-left: 10%;">
                                    <li class="nav-item d-flex align-self-center d-none d-sm-block">
                                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Eventos">WhatWeDo</a>
                                    </li>
                                    @if (User.IsInRole("Empresa"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Mis Eventos</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Crear Eventos</a>
                                        </li>
                                    }                                    
                                </ul>
                               
                                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">                                    
                                    <div class="navbar-nav flex-grow-1 justify-content-end" style="margin-right: 10%;margin-left: 10%;">
                                        <div class="dropdown">
                                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                                <img src="https://cdn-icons-png.flaticon.com/512/6861/6861326.png" alt="" width="32" height="32" class="rounded-circle me-2 d-none d-sm-block">
                                                <strong>Mi cuenta</strong>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1" style="">
                                                @if (!User.IsInRole("Empresa") && !User.IsInRole("Usuario"))
                                                {
                                                    <li>                                                       
                                                       <a class="dropdown-item" asp-controller="Auth" asp-action="Login">Login</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    @if (User.IsInRole("Empresa"))
                                                    {
                                                        <li>
                                                           <a class="dropdown-item" asp-controller="User" asp-action="MisDatosEmpresa">Mis datos</a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>                                                           
                                                            <a class="dropdown-item" asp-controller="User" asp-action="MisDatosUsuario">Mis datos</a>                                                           
                                                        </li>
                                                    }
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>  
                                                        <a class="dropdown-item" asp-controller="Auth" asp-action="CerrarSesion">Cerrar sesión</a>                                                        
                                                    </li>
                                                }                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>                                        
                                
                            </div>
                           
                        </div>
                    </nav>
                </header>
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                @*<footer class="border-top footer text-muted" style="position: inherit;">
                    <div class="d-flex justify-content-center">
                        <p>
                            &copy; 2023 - WhatWeDo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </p>
                    </div>
                </footer>*@
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="sidebars.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
