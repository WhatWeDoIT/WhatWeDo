@model Usuario
@{
    Layout = "/Views/Auth/_AuthLayout.cshtml";
    ViewData["Title"] = "Registro";
}
<form asp-controller="Auth" asp-action="CrearUsuario" id="registerForm" method="post">
    <h2>Crear una cuenta nueva.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Nombre" class="form-control" aria-required="true" placeholder="nombre" />
        <label>Nombre</label>
        <span class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Direccion" class="form-control" aria-required="true" placeholder="direccion" />
        <label>Direccion</label>
        <span class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Mail" class="form-control" aria-required="true" placeholder="nombre@ejemplo.com" />
        <label >Email</label>
        <span class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Pass" type="password" class="form-control" aria-required="true" placeholder="contraseña" />
        <label >Contraseña</label>
        <span class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Pass" type="password" class="form-control" aria-required="true" placeholder="contraseña" />
        <label>Confirmar Contraseña</label>
        <span class="text-danger"></span>
    </div>
    <div class="col-12 align-self-center">
        <div class="form-floating mb-3 ">
            <div class="form-check form-switch d-flex justify-content-center">
                <input asp-for="EsEmpresa" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Cuenta de empresa</label>
            </div>
        </div>
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
    @if (ViewBag.Alert != null)
    {
        <div class="alert alert-dismissable alert-danger" style="margin-top:10px">
            <div class="row">
                <strong>¡Error!</strong>
            </div>
            <div class="row">
                <label class="form-label">@ViewBag.Alert</label>
            </div>
           
        </div>
    }
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $("#linkRegister").addClass("active");
</script>

